{
    "manifest_version": 3,
    "name": "Page Translator",
    "version": "1.0",
    "description": "Simple Page Translator Extension from Sendy.",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "logo/logo16.png",
        "32": "logo/logo32.png",
        "128": "logo/logo128.png"
      }
    },
    "icons": {
      "16": "logo/logo16.png",
      "32": "logo/logo32.png",
      "128": "logo/logo128.png"
    }
  }